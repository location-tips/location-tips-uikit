{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/uikit-react",
    "rootDir": "uikit",
    "declaration": true,
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
    ]
  },
  "exclude": [
    "uikit/**/*.spec.ts",
    "uikit/**/*.test.ts",
    "uikit/**/*.spec.tsx",
    "uikit/**/*.test.tsx",
    "uikit/**/*.spec.js",
    "uikit/**/*.test.js",
    "uikit/**/*.spec.jsx",
    "uikit/**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "include": [
    "uikit/index.react.ts",
    "uikit/**/_react/*.ts",
    "uikit/**/_react/*.tsx"
  ]
}
