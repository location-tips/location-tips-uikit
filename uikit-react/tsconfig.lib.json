{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "uikit-react",
    "declaration": true,
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
    ]
  },
  "exclude": [
    "uikit-react/**/*.spec.ts",
    "uikit-react/**/*.test.ts",
    "uikit-react/**/*.spec.tsx",
    "uikit-react/**/*.test.tsx",
    "uikit-react/**/*.spec.js",
    "uikit-react/**/*.test.js",
    "uikit-react/**/*.spec.jsx",
    "uikit-react/**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "include": [
    "uikit-react/index.ts",
    "uikit-react/**/*.ts",
    "uikit-react/**/*.tsx"
  ]
}
