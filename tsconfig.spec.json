{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "rootDir": ".",
    "declaration": true,
    "types": [
      "jest", 
      "node"
    ]
  },
  "include": [
    "jest.config.ts",
    "src/*.test.ts",
    "src/*.test.tsx",
    "src/*.spec.ts",
    "src/*.d.ts"
  ]
}
